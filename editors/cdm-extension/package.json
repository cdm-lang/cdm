{
  "name": "cdm",
  "displayName": "Contextual Data Models (CDM) Language Support",
  "description": "Language support for CDM (Contextual Data Model)",
  "version": "0.1.0",
  "publisher": "larner-dev",
  "icon": "./logo-128-128.png",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cdm-lang/cdm"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "cdm",
    "schema",
    "database",
    "code generation"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cdm",
        "aliases": [
          "CDM",
          "cdm"
        ],
        "extensions": [
          ".cdm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "CDM",
      "properties": {
        "cdm.server.path": {
          "type": "string",
          "default": "cdm-lsp",
          "description": "Path to cdm-lsp server binary. If not set, will look for 'cdm-lsp' in PATH."
        },
        "cdm.format.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for indentation when formatting"
        },
        "cdm.validation.checkIds": {
          "type": "boolean",
          "default": true,
          "description": "Check for missing entity IDs (W005/W006 warnings)"
        },
        "cdm.format.assignIdsOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically assign entity IDs to models, type aliases, and fields when saving"
        },
        "cdm.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace LSP communication for debugging"
        }
      }
    },
    "commands": [
      {
        "command": "cdm.restartServer",
        "title": "CDM: Restart Language Server"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "cdm",
        "scopes": {
          "comment": [
            "comment.line.cdm"
          ],
          "keyword": [
            "storage.modifier.cdm",
            "keyword.control.extends"
          ],
          "string": [
            "string.quoted.double.cdm"
          ],
          "number": [
            "constant.numeric.cdm"
          ],
          "operator": [
            "keyword.operator.cdm"
          ],
          "type": [
            "support.type.cdm"
          ],
          "type.readonly": [
            "support.type.primitive.cdm"
          ],
          "class": [
            "entity.name.class.cdm"
          ],
          "class.definition": [
            "entity.name.class.cdm"
          ],
          "property": [
            "variable.other.property.cdm"
          ],
          "property.definition": [
            "variable.other.property.cdm"
          ],
          "parameter": [
            "storage.type.entity-id.cdm"
          ],
          "parameter.readonly": [
            "storage.type.entity-id.cdm"
          ],
          "macro": [
            "entity.name.plugin.cdm"
          ],
          "enumMember": [
            "string.quoted.double.cdm"
          ]
        }
      }
    ],
    "configurationDefaults": {
      "[cdm]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.tokenColorCustomizations": {
        "[Default Dark Modern]": {
          "textMateRules": [
            {
              "scope": "storage.type.entity-id.cdm",
              "settings": {
                "foreground": "#5a5a5a",
                "fontStyle": "italic"
              }
            }
          ]
        },
        "[Default Light Modern]": {
          "textMateRules": [
            {
              "scope": "storage.type.entity-id.cdm",
              "settings": {
                "foreground": "#a8a8a8",
                "fontStyle": "italic"
              }
            }
          ]
        },
        "[*Dark*]": {
          "textMateRules": [
            {
              "scope": "storage.type.entity-id.cdm",
              "settings": {
                "foreground": "#5a5a5a",
                "fontStyle": "italic"
              }
            }
          ]
        },
        "[*Light*]": {
          "textMateRules": [
            {
              "scope": "storage.type.entity-id.cdm",
              "settings": {
                "foreground": "#a8a8a8",
                "fontStyle": "italic"
              }
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish:vscode": "vsce publish",
    "publish:openvsx": "ovsx publish",
    "publish": "vsce publish && ovsx publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "ovsx": "^0.10.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
