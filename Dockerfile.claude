FROM node:20-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    build-essential \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Create claude user with configurable UID/GID (defaults to 501 for macOS compatibility)
ARG HOST_UID=501
ARG HOST_GID=20
RUN userdel -r node && \
    groupadd -g ${HOST_GID} claude || true && \
    useradd -m -u ${HOST_UID} -g ${HOST_GID} -s /bin/bash claude && \
    echo "claude ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Install Rust for root (for system-wide tools)
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Install just command runner (as root for system-wide availability)
RUN cargo install just && \
    cp /root/.cargo/bin/just /usr/local/bin/

# Install Claude Code CLI (system-wide)
RUN npm install -g @anthropic-ai/claude-code

# Install Rust for claude user
USER claude
WORKDIR /home/claude
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y && \
    /home/claude/.cargo/bin/rustup target add wasm32-wasip1
ENV PATH="/home/claude/.cargo/bin:${PATH}"

# Switch back to root for remaining setup
USER root

# Set up working directory
WORKDIR /workspace

# Copy entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod 755 /usr/local/bin/docker-entrypoint.sh

# Set up git to allow the workspace directory (system-wide)
RUN git config --system --add safe.directory /workspace && \
    git config --system --add safe.directory '/workspace/worktrees/*'

# Set entrypoint to fix git worktree paths and set up session storage
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]

# Switch to non-root user
USER claude

# Default command opens Claude Code CLI with no permissions prompts
CMD ["claude", "--dangerously-skip-permissions"]
