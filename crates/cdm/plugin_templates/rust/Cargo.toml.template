[package]
name = "cdm-plugin-{{PLUGIN_NAME}}"
version = "1.0.0"
edition = "2021"

[lib]
crate-type = ["cdylib", "rlib"]

[dependencies]
# Uses the latest published version from crates.io
# For local development, you can use: { path = "../cdm/crates/cdm-plugin-interface" }
cdm-plugin-interface = "0.1"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

[profile.release]
opt-level = "z"
lto = true
codegen-units = 1
strip = true
